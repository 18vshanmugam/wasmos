#!/usr/bin/env node

let shell = require("shelljs");
let path = require("path")

//Get the root Binaries
let rootBin =  path.resolve(path.dirname( __dirname)+"/../../node_modules/.bin/*");
console.log(shell.ls("..").stdout)
shell.cd("./node_modules/.bin")
shell.ls(rootBin).forEach(bin => {
  let binName = path.basename(bin)
  let dirName = path.dirname(bin);
  let relativeBinary = path.join(path.relative(shell.pwd().stdout, dirName), binName)
   // console.log(relativeBinary, binName)
})
shell.cd("../..")
console.log(path.basename(shell.pwd().stdout) +" binaries linked");
